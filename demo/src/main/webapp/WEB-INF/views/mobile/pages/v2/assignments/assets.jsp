<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@ taglib prefix="wmfmt" uri="http://www.workmarket.com/taglib/fmt" %>
<%@ taglib prefix="fn" uri="http://java.sun.com/jsp/jstl/functions" %>
<%@ taglib prefix="wm-csrf" uri="http://www.workmarket.com/taglib/csrf" %>

<c:set var="pageScript" value="wm.pages.mobile.assignments.assets" scope="request"/>
<c:set var="pageScriptParams" value="${work.workNumber}, ${allowMobileSignature eq true}" scope="request"/>
<c:set var="backUrl" value="/mobile/assignments/details/${work.workNumber}" scope="request"/>

<div class="wrap assets-page">
	<jsp:include page="/WEB-INF/views/mobile/partials/nav.jsp">
		<jsp:param name="title" value="Attachments" />
	</jsp:include>

	<div class="grid content">
		<div class="unit whole" id="public-message">
			<c:import url="/WEB-INF/views/mobile/partials/notices.jsp" />
		</div><%--unit whole--%>
		<div class="unit whole">
			<h3>Attachments <span id="resource-count" class="badge">0</span></h3>
			<ul class="closing-assets-container asset-list"></ul>

			<div class="asset-info"></div>

			<div class="default-button popup-open" data-popup-selector="#add-attachment-popup">Add Attachment</div>
		</div>
	</div><%--grid--%>
</div><%--wrap--%>

<script id="resource-asset-list-template" type="text/template">
	{{ _.each(assets, function (asset) { }}
	<li data-asset-id="{{= asset.uuid }}" class="attachment-block">
		{{ if (!_.isEmpty(asset.mimeType) && asset.mimeType.toLowerCase().indexOf('image') !== -1) { }}
		<a href="javascript:void(0);"
		   style="background-image:url('/asset/download/{{= asset.thumbnailUuid }}');"
		   class="asset-thumb popup-open-asset"
		   data-uploaded-by="{{= asset.uploadedBy }}"
		   data-upload-date="{{= asset.uploadDate }}"
		   data-uuid="{{= asset.uuid }}"
		   data-type="{{= asset.type }}"
		   data-uri="{{= asset.uri }}"
		   data-transformLargeUuid="{{= asset.transformLargeUuid }}"
		   data-id="{{= asset.id }}"
		   data-popup-selector="#review-attachment-popup">
		</a>
		{{ } else { }}
		<a href="javascript:void(0);"
		   class="asset-thumb no-thumb popup-open-asset"
		   data-uploaded-by="{{= asset.uploadedBy }}"
		   data-upload-date="{{= asset.uploadDate }}"
		   data-uuid="{{= asset.uuid }}"
		   data-type="{{= asset.type }}"
		   data-uri="{{= asset.uri }}"
		   data-transformLargeUuid="{{= asset.transformLargeUuid }}"
		   data-id="{{= asset.id }}"
		   style="background-image:url('data:image/svg+xml;base64,');"
		   data-popup-selector="#review-attachment-popup">
		</a>
		{{ } }}
		<a href="javascript:void(0);"
		   class="asset-details popup-open-asset"
		   data-uploaded-by="{{= asset.uploadedBy }}"
		   data-upload-date="{{= asset.uploadDate }}"
		   data-uuid="{{= asset.uuid }}"
		   data-type="{{= asset.type }}"
		   data-uri="{{= asset.uri }}"
		   data-transformLargeUuid="{{= asset.transformLargeUuid }}"
		   data-id="{{= asset.id }}"
		   data-popup-selector="#review-attachment-popup">
			<p class="asset-name">{{= asset.name }}</p>
			{{ if (!_.isEmpty(asset.description)) { }}<p class="asset-description">{{= asset.description }}</p>{{ } }}
		</a>
		<a class="asset-remove"><jsp:include page="/WEB-INF/views/mobile/partials/svg-icons/icon-trashcan.jsp"/></a>
	</li>
	{{ }); }}
</script>

<script id="asset-metadata-template" type="text/template">
	{{ if (!_.isEmpty(assetInfo.assetNote) || !_.isEmpty(assetInfo.requiredCloseAssets)) { }}
	<h3>Closeout Instructions</h3>

	<%-- Worker still has some stuff to upload before they can submit --%>
	{{ if (!_.isEmpty(assetInfo.remainingCloseAssets)) { }}
	<p><span id="remaining-asset-count" class="badge">{{= assetInfo.remainingCloseAssets }}</span> more upload(s) required before you may complete this assignment.</p>
	{{ } }}

	<%-- There were required attachments, and the worker uploaded them --%>
	{{ if (!_.isEmpty(assetInfo.requiredCloseAssets) && assetInfo.remainingCloseAssets === 0) { }}
	<p>Thank you for uploading the required deliverables.</p>
	{{ } }}

	{{ if (!_.isEmpty(assetInfo.assetNote)) { }}
	<p>{{= assetInfo.assetNote }}</p>
	{{ } }}
	{{ } }}
</script>

<%-- Add attachment popup --%>
<c:import url="/WEB-INF/views/mobile/pages/v2/assignments/add-attachment-popup.jsp" />

<%-- Review attachment popup --%>
<c:import url="/WEB-INF/views/mobile/pages/v2/assignments/review-attachment-popup.jsp" />
