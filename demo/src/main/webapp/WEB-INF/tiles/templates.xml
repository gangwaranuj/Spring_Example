<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="tiles:pdf/**">
		<put-attribute name="body" value="/WEB-INF/views/pdf/{1}.jsp" />
	</definition>

	<definition name="tiles:web/pages/**" template="/WEB-INF/views/web/templates/app.jsp">
		<put-attribute name="body" value="/WEB-INF/views/web/pages/{1}.jsp" cascade="true" />
	</definition>

	<definition name="mobile/pages/v2/**" template="/WEB-INF/views/mobile/templates/base.jsp">
		<put-attribute name="body" value="/WEB-INF/views/mobile/pages/v2/{1}.jsp" />
	</definition>

</tiles-definitions>
