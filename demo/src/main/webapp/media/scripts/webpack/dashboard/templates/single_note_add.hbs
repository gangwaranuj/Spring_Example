<div>
	<form action="/assignments/add_note" method="post" id="single-note-add" class="form-stacked">
		<input type="hidden" name="assignment_id" id="assignment_id"/>
		<div class="clearfix">
			<div class="input">
				<textarea name="content" id="note_content" rows="5" class="span8"></textarea>
			</div>
		</div>
		<div class="clearfix">
			<div class="input">
				<ul class="inputs-list">
					<li>
						<label>
							<input type="radio" name="is_private" value="0" checked="true"/>
							Everyone on assignment can see
						</label>
					</li>
					<li>
						<label>
							<input type="radio" name="is_private" value="1"/>
							Private: Only my company can see
						</label>
					</li>
				</ul>
			</div>
		</div>
		<div class="wm-action-container">
			<button data-modal-close id="add-note-close" class="button">Close</button>
			<button class="button" id="submit_add_note">Save</button>
		</div>
	</form>
</div>
