				<tbody>
					<tr>
					<td width = "30%"><strong>Title</strong></td>
					<td>${template.workTitle}</td>
					</tr>
					<tr>
					<td width = "30%"><strong>Location</strong></td>
					<td>${template.address}</td>
					</tr>
					<tr>
					<td width = "30%"><strong>Date and Time</strong></td>
					<td>${template.date}</td>
					</tr>
					<tr>
					<td width = "30%"><strong>Worker Name</strong></td>
					<td><a href="${baseurl}/profile/${template.resource.userNumber}">
						${template.resource.firstName} ${template.resource.lastName}</a></td>
					</tr>
					<tr>
					<td width = "30%"><strong>Worker Email</strong></td>
					<td>${template.resource.email}</td>
					</tr>
					#if(  ${template.resource.profile.workPhone} )
						<tr>
						<td width = "30%"><strong>Worker Phone</strong></td>
						<td>${template.resource.profile.workPhone}</td>
						</tr>
					#end
					#foreach($field in ${template.customFields})
						<tr>
						<td width = "30%"><strong>$field.workCustomField.name</strong></td>
