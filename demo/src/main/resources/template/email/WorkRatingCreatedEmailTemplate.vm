<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #333333; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">${template.rating.ratingCompany.effectiveName}</h1>

<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">

	<p style="margin: 0px 0px 20px 0px">
		#if ($onBehalfOfUser && $onBehalfOfUser.firstName)
			Hello ${onBehalfOfUser.firstName},<br/>
		#else
			Hello ${toUser.firstName},<br/>
		#end
		<br/>
		#if( ${template.work} )
			${template.rating.ratingCompany.effectiveName} rated you on the assignment, <strong>${template.workTitle}</strong> <small>(${template.work.workNumber})</small>.
		#else
			${template.rating.ratingCompany.effectiveName} rated you.
		#end
	</p>

	<p style="margin: 0px 0px 20px 0px">
		<strong>Rating:</strong>
			${template.ratingDescription}
		<br/>
		<strong>Quality:</strong>
		${template.qualityDescription}
		<br/>
		<strong>Professionalism:</strong>
		${template.professionalismDescription}
		<br/>
		<strong>Communication:</strong>
		${template.communicationDescription}
		<br/>

	#if( ${template.rating.reviewSharedFlag} )
		#if( ${template.rating.review} )
			#if ($template.rating.review.length() > 0)
		        <strong>Rating Review:</strong> ${template.rating.review}
			#end
		#end
	#end
	</p>

	#if( ${template.work} )
		<p style="margin: 0px 0px 20px 0px">
			<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
			<tbody>
				<tr>
					<td width = "30%"><strong>Title</strong></td>
					<td>${template.workTitle}</td>
				</tr>
				<tr>
					<td width = "30%"><strong>Location</strong></td>
					<td>${template.address}</td>
				</tr>
				<tr>
					<td width = "30%"><strong>Date and Time</strong></td>
					<td>${template.date}</td>
				</tr>
				#if ($showPricing)
					<tr>
						<td width = "30%"><strong>Assignment Budget</strong></td>
						<td>${template.price}</td>
					</tr>
				#end
				#foreach($field in ${template.customFields})
					<tr>
						<td width = "30%"><strong>$field.workCustomField.name</strong></td>
						<td>$field.value</td>
					</tr>
				#end
				</tbody>
			</table>
		</p>
	#end

	<p style="margin: 0px">
		<a href="${baseurl}/ratings">View your ratings and reviews</a>
	</p>

</div>

#parse("template/email/partials/do-not-reply.vm")

#if (${template.encryptedWorkFollowId})
	#parse("template/email/partials/unfollow.vm")
#end
