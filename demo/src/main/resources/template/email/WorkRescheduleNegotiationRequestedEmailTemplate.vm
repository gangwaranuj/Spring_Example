<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #fe8707; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">Assignment Reschedule Request</h1>

<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">

	<p style="margin: 0px 0px 10px 0px">
		#if ($onBehalfOfUser && $onBehalfOfUser.firstName)
			Hello ${onBehalfOfUser.firstName},<br/>
		#else
			Hello ${toUser.firstName},<br/>
		#end
		<br/>
		#if(${template.negotiation.workSubStatusTypeAssociation})
			${template.negotiation.requestedBy.fullName} applied the ${template.negotiation.workSubStatusTypeAssociation.workSubStatusType.description} label to the assignment, <strong>${template.workTitle}</strong> <small>(${template.work.workNumber})</small>, and requested a reschedule.
		#else
			${template.negotiation.requestedBy.fullName} requested to reschedule the assignment, <strong>${template.workTitle}</strong> <small>(${template.work.workNumber})</small>.
		#end
	</p>

	#if (${template.negotiation.note})
		<p style="margin: 20px;padding:20px;background-color: #f5f5f5;">
			<strong>${template.negotiation.requestedBy.fullName} says...</strong><br/>
			#set( $rawNote = $display.br($escape.html($template.negotiation.note.content)) )
			<em>${rawNote}</em>
		</p>
	#end

	#if(${template.negotiation.workSubStatusTypeAssociation})
		#if(${template.negotiation.workSubStatusTypeAssociation.transitionNote})
		<p style="margin: 0px 0px 10px 0px">
			#set( $rawNote = $display.br($escape.html($template.negotiation.workSubStatusTypeAssociation.transitionNote.content)) )
			<strong>Request notes:</strong> ${rawNote}
		</p>
		#end
	#end

	<p style="margin: 0px 0px 20px 0px">
		<strong>Original Date and Time:</strong> ${template.date}<br/>
		<strong>Requested Date and Time:</strong> ${template.negotiationDate}<br/>
	</p>

	<p style="margin: 0px 0px 20px 0px">
		<table cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr>
					<td style="background-color: #fe8707; text-align: center; padding: 2px 7px 4px;">
						<a target="_blank" style="font-weight: bold; font-size: 13px; font-family: Helvetica Neue, Arial, sans-serif; text-decoration: none; color: #ffffff; display: block; padding: 6px 7px 4px;" href="${baseurl}/assignments/details/${template.work.workNumber}">View this assignment</a>
					</td>
				</tr>
			</tbody>
		</table>
	</p>

	<p style="margin: 0px 0px 20px 0px">
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
		<tbody>
			<tr>
				<td width = "30%"><strong>Title</strong></td>
				<td>${template.workTitle}</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Location</strong></td>
				<td>${template.address}</td>
			</tr>
			#if ($showPricing)
				<tr>
					<td width = "30%"><strong>Assignment Budget</strong></td>
					<td>${template.price}</td>
				</tr>
			#end
			#foreach($field in ${template.customFields})
				<tr>
					<td width = "30%"><strong>$field.workCustomField.name</strong></td>
					<td>$field.value</td>
				</tr>
			#end
			</tbody>
		</table>
	</p>
    #parse("template/email/partials/buyer-footer.vm")
</div>

#parse("template/email/partials/do-not-reply.vm")

#if (${template.encryptedWorkFollowId})
	#parse("template/email/partials/unfollow.vm")
#end
