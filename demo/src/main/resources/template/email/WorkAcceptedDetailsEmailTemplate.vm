#set ($workNumber = $template.work.workNumber)

<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #333333; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">${template.work.company.effectiveName}</h1>

	<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">

	<p style="margin: 0px 0px 20px 0px">
		Hello ${template.resource.firstName},<br>
		<br>
		You are assigned to work:<br/>
		<strong>${template.workTitle}</strong> <small>(${workNumber})</small>.<br/>
		<br/>
		#if (${template.work.isCheckinRequired()})
			<strong>Please note this assignment requires check-in.</strong><br/>
			<br/>
		#end
		#if ($template.workHasAttachments)
			<strong>Documents that are required to complete this assignment are attached to this email.</strong>
		#end
	</p>


	<p style="margin: 0px 0px 20px 0px">
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
		<tbody>
			<tr>
				<td width = "30%"><strong>Title</strong></td>
				<td>${template.workTitle}</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Location</strong></td>
				<td>${template.formattedAddressForEmail}
					#if (${template.work.addressOnsiteFlag})
						| <a href="${template.googleMapsURL}" style="background-color: rgb(255, 232, 108)" target="_blank">View on Map</a>
					#end
				</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Date and Time</strong></td>
				<td>${template.formattedScheduleTimeForEmail} | Add to Calendar: <a href="${template.googleCalendarURL}" style="background-color: rgb(255, 232, 108)" target="_blank">Google</a> <a href="${baseurl}/assignments/download_ics/${workNumber}" style="background-color: rgb(255, 232, 108)">Outlook</a><br>
			</td>
			</tr>
			#if (!${template.isWorkInternal} && $showPricing)
				<tr>
					<td width = "30%"><strong>Assignment Budget</strong></td>
					<td>${template.work.pricingStrategy}</td>
				</tr>
			#end
			#if (${template.work.isResourceConfirmationRequired()})
				<tr>
					<td width = "30%"><strong>Confirmation Required</strong></td>
					<td>${template.formattedConfirmationDateForEmail}</td>
				</tr>
			#end
			</tbody>
		</table>
	</p>

	<p style="margin: 0px 0px 20px 0px">
		<table cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr>
					<td style="background-color: #fe8707; text-align: center; padding: 2px 7px 4px;">
						<a target="_blank" style="font-weight: bold; font-size: 13px; font-family: Helvetica Neue, Arial, sans-serif; text-decoration: none; color: #ffffff; display: block; padding: 6px 7px 4px;" href="${baseurl}/assignments/details/${workNumber}">View Assignment</a>
					</td>
				</tr>
			</tbody>
		</table>
	</p>

	<h1 style="font-weight: 700; font-size: 14px; margin: 0px 0px 10px 0px">Client Details</h1>
	<p style="margin: 0px 0px 20px 0px">
		<strong>Please contact your client directly for any questions, concerns, or cancellations</strong><br/>
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
		<tbody>
			<tr>
				<td width = "30%"><strong>Name</strong></td>
				<td>$!{template.work.buyer.fullName}</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Company</strong></td>
				<td>$!{template.work.company.effectiveName}</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Email</strong></td>
				<td>$!{template.work.buyer.email}</td>
			</tr>
			<tr>
				<td width = "30%"><strong>Phone</strong></td>
				<td>$!{template.work.buyer.profile.workPhone}</td>
			</tr>
			</tbody>
		</table>
		<br>Manage this assignment from the WorkMarket App. Get it for <a target="_" href="https://play.google.com/store/apps/details?id=com.workmarket.android" style="text-decoration: none">Android</a> or <a target="_" href="https://itunes.apple.com/us/app/work-market/id675449493?mt=8&uo=4" target="itunes_store" style="text-decoration: none">iOS</a>.
	</p>

</div>

#parse("template/email/partials/do-not-reply.vm")
