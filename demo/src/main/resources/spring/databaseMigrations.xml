<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd ">

	<bean id="flyway" class="org.flywaydb.core.Flyway" depends-on="dataSourceWorkmarket">
		<property name="dataSource" ref="dataSourceWorkmarket" />
		<property name="schemas" value="${wm_marketcore.schema}" />
		<property name="table" value="${migrations.metatable}" />
		<property name="locations" value="classpath:scripts" />
		<property name="sqlMigrationPrefix" value="" />
		<property name="initOnMigrate" value="${init.on.migrate}" />
		<property name="initDescription" value="${init.description}" />
		<property name="initVersion" value="#{T(org.flywaydb.core.api.MigrationVersion).fromVersion(${init.version})}" />
		<property name="placeholderPrefix" value="${migrations.placeholder.prefix}" />
		<property name="placeholderSuffix" value="${migrations.placeholder.suffix}" />
		<property name="outOfOrder" value="${allow.out.of.order.migrations}" />
		<property name="validateOnMigrate" value="${validate.on.migrate}" />
	</bean>
</beans>