<h4 style="color:black;"><span class="work_">{{this.items.totalCount}}</span> {{[../../helpers/pluralize] 'assignment' this.items.totalCount}} available near you.</h4>
<ul class="media-list">
	{{#each this.items.results}}
		<li class="media">
			<hr />
			<div class="date-widget pull-left">
				<div>
					{{[../../helpers/dateFormat] this.scheduleFromDate "d"}}
					<span>
						{{[../../helpers/dateFormat] this.scheduleFromDate "mmm"}}
					</span>
				</div>
			</div>

			<a class="button pull-right" href="/work/{{this.workNumber}}">Apply</a>
			<span class="pull-right">
				<a id="linkedin" href="#"
				   data-socialize="linkedIn"
				   data-title="{{this.publicTitle}}"
				   data-url="http://www.workmarket.com/work/{{this.workNumber}}"
				   data-summary="{{this.description}}">
					<i class="icon-linkedin-sign icon-large muted"></i>
				</a>
				<a id="facebook" href="#"
				   data-socialize="facebook"
				   data-title="{{this.publicTitle}}"
				   data-url="http://www.workmarket.com/work/{{this.workNumber}}"
				   data-summary="{{this.description}}">
					<i class="icon-facebook-sign icon-large muted"></i>
				</a>
				<a id="twitter" href="#"
				   data-socialize="twitter"
				   data-text="Find work @workmarket {{this.publicTitle}}"
				   data-url="http://www.workmarket.com/work/{{this.workNumber}}">
					<i class="icon-twitter-sign icon-large muted"></i>
				</a>
				<a id="mailto" href="mailto:?subject=Check out this job on Work Market&body=I thought you'd be interested in this job I found on Work Market.%0D%0D{{this.publicTitle}}%0D%0Dhttp://www.workmarket.com/work/{{this.workNumber}}">
					<i class="icon-envelope-alt icon-large muted"></i>
				</a>
			</span>

			<div class="media-body">
				<h4 class="media-heading"><a href="/work/{{this.workNumber}}">{{this.publicTitle}}</a></h4>
				<ul class="inline">
					<li>
						<small>
							{{#if this.city}}{{[../../helpers/trim] this.city}}, {{[../../helpers/trim] this.state}}{{/if}}
							{{#unless this.city}}Virtual Location{{/unless}}
						</small>
					</li>
					{{#unless @root.options.hasAnyRoleAdminManagerDispatcher}}
						{{#unless @root.options.companyHidesPricing}}
							<li><small>{{[../../helpers/formatCurrency] this.spendLimit}}</small></li>
						{{/unless}}
					{{/unless}}
					{{#if @root.options.hasAnyRoleAdminManagerDispatcher}}
						<li><small>{{[../../helpers/formatCurrency] this.spendLimit}}</small></li>
					{{/if}}
					<li><small>Posted {{[../../helpers/ago] this.createdDate}}</small></li>
				</ul>
			</div>
		</li>
	{{/each}}
</ul>

<div class="tac">
	{{#if this.isNotFirstPage}}
		<a id="prev-page" class = "small" href="">&laquo; Prev Page </a>
	{{/if}}
	{{#if this.isMorePages}}
		<a id="next-page" class = "small" href=""> Next Page &raquo;</a>
	{{/if}}
</div>
