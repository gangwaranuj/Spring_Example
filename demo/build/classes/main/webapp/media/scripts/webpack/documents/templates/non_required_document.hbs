<li class="document-uploader--document-list-item clear" data-uuid="{{this.asset.uuid}}">
	<div class="document-uploader--filename">
		{{this.asset.name}}
	</div>
	<div class="document-uploader--icon">
		{{#if this.asset.containsImageMimeType}}
			{{#if this.asset.isUpload}}
				<div class="document-uploader--thumbnail" style="background-image: url('/asset/downloadTemp/{{this.asset.uuid}}');"></div>
			{{/if}}
			{{#unless this.asset.isUpload}}
				<div class="document-uploader--thumbnail" style="background-image: url('/asset/{{this.asset.uuid}}');"></div>
			{{/unless}}
		{{/if}}
		{{#unless this.asset.containsImageMimeType}}
			<div class="document-uploader--thumbnail -no-thumb">
				<svg version="1.1"  class="document-uploader--option -no-thumb" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
				viewBox="0 0 29 29" enable-background="new 0 0 29 29" xml:space="preserve">
					<g>
						<path fill="#949899" d="M16.744,1C18.264,1,23,6.097,23,7.733v12.433C23,21.729,21.729,23,20.166,23H3.835
								C2.272,23,1,21.729,1,20.166V3.834C1,2.271,2.272,1,3.835,1H16.744 M16.744,0H3.835C1.721,0,0,1.72,0,3.834v16.331
								C0,22.28,1.721,24,3.835,24h16.331C22.281,24,24,22.28,24,20.166V7.733C24,5.565,18.779,0,16.744,0L16.744,0z"/>
						<g opacity="0.3">
							<path d="M16.318,0.687v3.96c0,2.047,1.66,3.707,3.707,3.707H23.5"/>
							<path d="M23.5,8.541h-3.476c-2.147,0-3.894-1.747-3.894-3.894V0.688h0.375v3.959c0,1.94,1.579,3.519,3.519,3.519H23.5V8.541z"/>
						</g>
						<path fill="#FFFFFF" d="M16.818,0.187v3.96c0,2.047,1.66,3.707,3.707,3.707H24"/>
						<path fill="#4C5355" d="M24,8.041h-3.476c-2.147,0-3.894-1.747-3.894-3.894V0.188h0.375v3.959c0,1.94,1.579,3.519,3.519,3.519
									H24V8.041z"/>
						<text fill="#4C5355" font-weight="600" font-family="Open Sans" {{{this.asset.extensionSize}}}>{{this.asset.upperExtension}}</text>
					</g>
				</svg>

			</div>
		{{/unless}}
		<div class="document-uploader--file-options">
			{{#if this.asset.isUpload}}
			<a href="/asset/downloadTemp/{{this.asset.uuid}}">
			{{/if}}
			{{#unless this.asset.isUpload}}
			<a href="/asset/download/{{this.asset.uuid}}">
			{{/unless}}
				<svg class="document-uploader--option -download" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.0" x="0px" y="0px" viewBox="0 0 32 24" enable-background="new 0 0 32 24" xml:space="preserve">
					<path d="M29.167 24H2.833C1.269 24 0 22.7 0 21.2V2.8C0 1.3 1.3 0 2.8 0h26.333C30.731 0 32 1.3 32 2.8 v18.4C32 22.7 30.7 24 29.2 24z" class="-background"/>
