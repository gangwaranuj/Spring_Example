<div class="mdl-textfield mdl-js-textfield {{#if hasFloatingLabel}}mdl-textfield--floating-label{{/if}}">
	<{{#if textarea}}textarea{{else}}input{{/if}}
		class="mdl-textfield__input"
		type="text"
		id="{{id}}"
		{{#if rows}}rows="{{rows}}"{{/if}}
		{{#if pattern}}pattern="{{pattern}}"{{/if}}
	>{{#if textarea}}</textarea>{{/if}}
	<label
		class="mdl-textfield__label"
		for="{{id}}"
	>{{label}}</label>
	{{#if error}}
		<span class="mdl-textfield__error">{{error}}</span>
	{{/if}}
</div>
