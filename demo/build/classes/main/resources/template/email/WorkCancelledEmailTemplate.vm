<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #333; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">${template.work.company.effectiveName}</h1>

<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">

	<p style="margin: 0px 0px 20px 0px">
		#if ($onBehalfOfUser && $onBehalfOfUser.firstName)
			Hello ${onBehalfOfUser.firstName},<br/>
		#else
			Hello ${toUser.firstName},<br/>
		#end
		<br/>
		${template.work.buyer.fullName} cancelled your assignment, <strong>${template.workTitle}</strong> <small>(${template.work.workNumber})</small>.<br/>

		#if ($showPricing && $template.work.fulfillmentStrategy.amountEarned)
			${template.work.company.effectiveName} has compensated you ${number.currency($template.work.fulfillmentStrategy.amountEarned)} for the inconvenience.<br/>
		#end
		<strong>If you have any questions regarding the status of this assignment, please contact ${template.work.buyer.fullName} at ${template.work.buyer.email} or ${template.work.buyer.profile.workPhone}.</strong>
	</p>

	#if ($template.message)
		<p>
			#set( $rawMessage = $display.br($escape.html($template.message)) )
			<strong>Notes on Cancellation:</strong> $!{rawMessage}
		</p>
	#end

	<h1 style="font-weight: 700; font-size: 14px; margin: 0px 0px 10px 0px">Assignment Details</h1>
	<p style="margin: 0px 0px 20px 0px">
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
			<tbody>
				<tr>
					<td width="30%"><strong>Title</strong></td>
					<td>${template.workTitle}</td>
				</tr>
				<tr>
					<td width="30%"><strong>Location</strong></td>
					<td>${template.address}</td>
				</tr>
				<tr>
					<td width="30%"><strong>Date and Time</strong></td>
					<td>${template.date}</td>
				</tr>
			</tbody>
		</table>
	</p>
</div>

#parse("template/email/partials/do-not-reply.vm")
