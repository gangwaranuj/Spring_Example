#set ($workNumber = $template.work.workNumber)

<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #333333; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">${template.work.company.effectiveName}</h1>

<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">

	<p style="margin: 0px 0px 20px 0px">
		Hello ${template.resource.firstName},<br>
		<br>
		You are assigned to the following <b>assignment bundle</b>:<br/>
	</p>

	#if ($showPrice)
		<p>
			<b>Total Budget: ${template.bundleData.overview.budget}</b>
		</p>
	#end

	<p style="margin: 20px 0px">
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f9f9f9; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
			<tbody>
				<tr>
					<th>Title</th>
					<th>Location</th>
					<th>Start Date</th>
					#if ($showPrice)
						<th>Budget</th>
					#end
				</tr>
				#foreach($assignment in ${template.bundleData.assignments})
					<tr>
						<td><a href="${baseurl}/assignments/details/${assignment.workNumber}">${assignment.title}</a></td>
						<td>${assignment.location}</td>
						<td>${assignment.due}</td>
						#if ($showPrice)
							<td>${assignment.budget}</td>
						#end
					</tr>
				#end
			</tbody>
		</table>
	</p>

	<p style="margin: 0px 0px 20px 0px">
		<table cellspacing="0" cellpadding="0" border="0">
			<tbody>
				<tr>
					<td style="background-color: #fe8707; text-align: center; padding: 2px 7px 4px;">
						<a target="_blank" style="font-weight: bold; font-size: 13px; font-family: Helvetica Neue, Arial, sans-serif; text-decoration: none; color: #ffffff; display: block; padding: 6px 7px 4px;" href="${baseurl}/assignments/details/${workNumber}">View Assignment Bundle Details</a>
					</td>
				</tr>
			</tbody>
		</table>
	</p>

	<h1 style="font-weight: 700; font-size: 14px; margin: 0px 0px 10px 0px">Client Details</h1>
	<p style="margin: 0px 0px 20px 0px">
		<strong>Please contact your client directly for any questions, concerns, or cancellations</strong><br/>
		<table width="100%" cellspacing="0" cellpadding="5" border="1" style="border:1px solid #f5f5f5; font-family: Helvetica Neue, Arial, sans-serif; color: #000; font-size: 12px; padding:0; text-align:left; border-collapse: collapse; word-wrap:break-word;">
			<tbody>
				<tr>
					<td width = "30%"><strong>Name</strong></td>
					<td>$!{template.work.buyer.fullName}</td>
				</tr>
				<tr>
					<td width = "30%"><strong>Company</strong></td>
					<td>$!{template.work.company.effectiveName}</td>
				</tr>
				<tr>
					<td width = "30%"><strong>Email</strong></td>
					<td>$!{template.work.buyer.email}</td>
				</tr>
				<tr>
					<td width = "30%"><strong>Phone</strong></td>
					<td>$!{template.work.buyer.profile.workPhone}</td>
				</tr>
			</tbody>
		</table>
	</p>

</div>

#parse("template/email/partials/do-not-reply.vm")
