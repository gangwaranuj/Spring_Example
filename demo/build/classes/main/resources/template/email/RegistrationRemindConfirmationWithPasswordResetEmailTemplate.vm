#if ($fromUser.company.operatingAsIndividualFlag)
<h1 style="font-family: Helvetica Neue, Arial, sans-serif; font-weight: 700; font-size: 20px; margin: 0px 0px 10px 0px; color: #fe8707; padding: 0px 20px 10px 20px; border-bottom: 1px solid #eee;">Confirm Your Account</h1>

<div style="width: 520px; padding: 20px 20px 20px 20px; font-family: Helvetica Neue, Arial, sans-serif; color: #444; font-size: 13px; line-height: 18px;">
			
			<p style="margin: 0px 0px 20px 0px">
				Hello ${toUser.firstName},<br/>
				<br/>
				This is a reminder to confirm your WorkMarket account. ${fromUser.fullName} recently added you as a user.<br/>
				<br/>
				Please click the button below to confirm your account and choose your password.
			</p>
			
			<p style="margin: 20px 0px">
				<table cellspacing="0" cellpadding="0" border="0">
				<tbody>
				<tr>
				<td style="background-color: #fe8707; text-align: center; padding: 2px 7px 4px;">

				<a target="_blank" style="font-weight: bold; font-size: 13px; font-family: Helvetica Neue, Arial, sans-serif; text-decoration: none; color: #ffffff; display: block; padding: 6px 7px 4px;" href="${baseurl}/user/setup_password/$!{template.request.encryptedId}">Confirm My Account</a>

				</td>
				</tr>
				</tbody>
				</table>
			</p>
			
			<p style="margin: 0px 0px 20px 0px">
				If you have any questions, please contact ${fromUser.fullName} at ${fromUser.profile.workPhone} or ${fromUser.email}
			</p>			
			
			<p style="margin: 0px 0px 20px 0px">
				If the button above is not clickable, copy the link below and paste into your browser:<br/>
				<a href="${baseurl}/user/setup_password/$!{template.request.encryptedId}">${baseurl}/user/setup_password/$!{template.request.encryptedId}</a>		
			</p>
			
			<p style="margin: 0px">
				If you received this message in error and did not sign up for a WorkMarket account, click <a href="${baseurl}/user/not_my_account/$!{toUser.userNumber}">not my account</a>.<br/>
				<br/>
				For general inquiries or to request support with your account, please <a href="https://workmarket.zendesk.com/hc/en-us">visit our Help Center</a>.
			</p>
		</div>
	</td>
</tr>

#parse("template/email/partials/about-wm.vm")

